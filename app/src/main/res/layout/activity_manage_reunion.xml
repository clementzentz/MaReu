<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageReunionActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/reunion_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/return_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_reunion"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Reunion A"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center_vertical"
                android:textColor="#ffff"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reunion_toolbar"
        android:layout_margin="5dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="veuillez entrer les informations concernant la reunion que que souhaitez ajouter : "/>

        <EditText
            android:id="@+id/idReunion_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text"
            android:hint="identifiant reunion"/>

        <EditText
            android:id="@+id/lieuReunion_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lieu reunion"
            app:layout_constraintTop_toBottomOf="@id/idReunion_txt"/>

        <EditText
            android:id="@+id/sujetReunion_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lieuReunion_txt"
            android:hint="sujet reunion"/>

        <EditText
            android:id="@+id/emailReunion_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sujetReunion_txt"
            android:hint="email organisateur"/>

        <TextView
            android:id="@+id/openDialogTP_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="open time picker."
            app:layout_constraintTop_toBottomOf="@+id/emailReunion_txt"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/openDialogDP_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/emailReunion_txt"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:text="open date picker."
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:textAlignment="viewEnd"/>

        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="ajouter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/openDialogDP_txt"
            android:background="@color/colorPrimary"
            android:textColor="#ffff"/>

        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            app:layout_constraintTop_toBottomOf="@+id/openDialogDP_txt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffff"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>