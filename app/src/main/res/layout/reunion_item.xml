<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/reunion_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:padding="5dp"
     android:id="@+id/parent"
     android:layout_margin="4dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/color_reu"
        app:layout_constraintTop_toTopOf="@id/parent"
        app:layout_constraintBottom_toBottomOf="@id/parent"
        app:layout_constraintStart_toStartOf="@id/parent"
        android:src="@color/colorPrimary"/>

    <TextView
        android:id="@+id/name_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="@string/app_name"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/color_reu"
        app:layout_constraintTop_toTopOf="@id/color_reu"
        />

    <TextView
        android:id="@+id/email_organisateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-mail"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/name_meeting"
        app:layout_constraintStart_toEndOf="@id/color_reu"
        app:layout_constraintEnd_toEndOf="@id/name_meeting"/>

    <ImageButton
        android:id="@+id/delete_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent"
        app:layout_constraintBottom_toBottomOf="@id/parent"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="#fff"/>

 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>